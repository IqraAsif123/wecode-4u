<!DOCTYPE html>
<html>
  <head>
    <title>Wecode4u</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </head>

  <body>
  <nav class="navbar navbar-dark bg-dark">
    <%if !user_signed_in?%>
        <a class="navbar-brand" href="/landing/index">Wecode-4u</a>
        <% else %>
        <a class="navbar-brand" href="/landing/index">Wecode-4u</a>
        <% end %>
                <form class="form-inline">
                  <%if !user_signed_in?%>
                  <button type="button" class="btn btn-secondary btn-sm">  <%= link_to('Sign up', new_user_registration_path) %></button>
                  <button type="button" class="btn btn-secondary btn-sm"><%= link_to('Sign in', new_user_session_path) %></button>
                  <%elsif user_signed_in?%>
                  <button type="button" class="btn btn-secondary btn-sm"> <%= link_to( 'My Profile', user_profile_path )%></button>
                  <button type="button" class="btn btn-secondary btn-sm">  <%= link_to('Log out', destroy_user_session_path, method: :delete) %>  </button>
                  <%end%>
                </form>
      </nav>
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
      <div style="height: 100px"> </div>
      

      <div class="navbar fixed-bottom navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Wecode-4u</a>
                <%=link_to "Contact Us", "/ContactUs"  %>
           &copy; Copyright 2019 Wecode-4u

          </div>

  </body>
</html>
